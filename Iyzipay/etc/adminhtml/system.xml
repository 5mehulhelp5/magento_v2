<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1000" translate="label">
            <group id="iyzipay" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
                <label>iyzico Payment Gateways</label>
                <frontend_model>Iyzico\Iyzipay\Block\Adminhtml\System\Config\IyzipayFieldset</frontend_model>
                <field id="active" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label"
                       type="select">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="webhook_url_key" translate="label" type="text" sortOrder="5" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Webhook URL</label>
                    <frontend_model>Iyzico\Iyzipay\Block\Adminhtml\System\Config\IyzipayWebhookField</frontend_model>
                    <comment model="Iyzico\Iyzipay\Model\Config\IyzicowebhhokUrlComment"/>
                </field>
                <field id="sandbox" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label"
                       type="select">
                    <label>Sandbox</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_key" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label"
                       type="text">
                    <label>Api Key</label>
                </field>
                <field id="secret_key" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20"
                       translate="label" type="text">
                    <label>Secret Key</label>
                </field>
                <field id="title" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label"
                       type="text">
                    <label>Title</label>
                </field>
                <field id="order_status" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30"
                       translate="label" type="select">
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
                <field id="allowspecific" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="40"
                       translate="label" type="allowspecific">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="50"
                       translate="label" type="multiselect">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="overlayscript" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="55"
                       translate="label" type="select">
                    <label>Overlay Script</label>
                    <source_model>Iyzico\Iyzipay\Model\Config\Source\OverlayScript</source_model>
                </field>
                <field id="sort_order" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="60"
                       translate="label" type="text">
                    <label>Sort Order</label>
                </field>
                <field id="instructions" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="70"
                       translate="label" type="textarea">
                    <label>Instructions</label>
                </field>
                <field id="common_cron_settings" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="80" translate="label" type="select">
                    <label>Common Cron Settings</label>
                    <source_model>Iyzico\Iyzipay\Model\Config\Source\IyzipayCronSettings</source_model>
                </field>
                <field id="custom_cron_settings" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="90" translate="label" type="text">
                    <label>Custom Cron Settings</label>
                    <depends>
                        <field id="common_cron_settings">custom</field>
                    </depends>
                    <comment>Enter the custom cron settings in the following format: */5 * * * *</comment>
                </field>
                <field id="effective_cron_schedule" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Effective Cron Schedule</label>
                    <frontend_model>Iyzico\Iyzipay\Block\Adminhtml\System\Form\Hidden</frontend_model>
                    <comment>This field is automatically updated based on the Common or Custom Cron Settings.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
